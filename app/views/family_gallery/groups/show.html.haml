- content_for(:header_title) { t(".show_group", name: @group.name) }

.actions
  = link_to t(".edit_group"), edit_group_path(@group), class: "button" if can? :edit, @group
  = link_to t(".new_picture"), new_picture_path(group_id: @group.id), class: "button" if can? :new, FamilyGallery::Picture
  = link_to t('.upload_multiple'), new_group_multiple_picture_path(@group), class: 'button' if can? :new, FamilyGallery::Picture
  = link_to t('.set_dates_from_pictures'), set_dates_from_pictures_group_path(@group), method: :post, class: 'button', data: {confirm: t('are_you_sure')} if can? :set_dates_from_pictures, @group

%table.form
  %tbody
    %tr
      %td= FamilyGallery::Group.human_attribute_name(:name)
      %td= @group.name
    %tr
      %td= FamilyGallery::Group.human_attribute_name(:description)
      %td= simple_format @group.description, nil, wrapper_tag: "div"
    %tr
      %td= FamilyGallery::Group.human_attribute_name(:date_from)
      %td= l(@group.date_from) if @group.date_from?
    %tr
      %td= FamilyGallery::Group.human_attribute_name(:date_to)
      %td= l(@group.date_to) if @group.date_to?
    %tr
      %td= FamilyGallery::Group.human_attribute_name(:pictures)
      %td= @group.pictures.count

%h2= FamilyGallery::Picture.model_name.human(count: 2)
%table.list
  %tbody
    - groups_of_pictures do |pictures|
      %tr
        - pictures.each do |picture|
          %td= picture_image_tag(picture, size: 100, group: @group)
    - unless @group.pictures.any?
      %tr
        %td{colspan: 1}= t("no_results")

%br
%br

= will_paginate @pictures
