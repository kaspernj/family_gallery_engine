- content_for(:header_title) { t(".welcome") }

- if @groups.any?
  %h2= t(".latest_updated_groups")
  - @groups.each do |group|
    %h3= link_to_group group
    - group.pictures.order(:created_at).reverse_order.limit(9).each do |picture|
      = picture_image_tag picture, group: group, size: 100
- else
  = t(".no_groups_has_been_created_yet")

%br
%br

= will_paginate @groups
